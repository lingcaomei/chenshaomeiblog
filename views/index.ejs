<% include include/header%>
<% include include/nav%>

<div class="container">
    <!-- articles是render传出来的对象的值即--》articles--》 {title:'xxx',articles:[]}-->
    <div style="min-height: 500px;">
    <% if (articles.length) { %>

        <% articles.forEach(function(article){ %>

        <div class="media">
            <div class="media-left">
                <a href="#">
                    <img style="width:64px;height:64px" src="<%=article.avatar%>" alt="">
                    <!--<img data-holder-rendered="true" src="data:image/svg+xml;base64," style="width: 64px; height: 64px;" class="media-object" data-src="holder.js/64x64" alt="64x64">-->
                </a>
            </div>
            <div class="media-body">
                <h4 class="media-heading"><a href="/articles/detail/<%= article._id %>"><%= article.title %></a></h4>
                <%= article.content %>
            </div>
        </div>
        <% }) %>

    <% } %>
    </div>
    <nav>
        <ul class="pagination">
            <% if (pageNum>1){%>
            <li><a href="/articles/list/<%= pageNum-1 %>" aria-label="Previous"><span aria-hidden="true">«</span></a></li>
            <%  } %>

            <% if (totalPage>=1) {%>

            <%  for(var i=1;i<=totalPage;i++){ %>
            <li class="<%= i==pageNum?'active':''%>"><a href="/articles/list/<%= i %>"><%= i %></a></li>
            <% } %>
            <% } %>

            <% if (pageNum<totalPage){ %>
            <li><a href="/articles/list/<%= pageNum+1 %>" aria-label="Next"><span aria-hidden="true">»</span></a></li>
            <% } %>
        </ul>
    </nav>
</div>


<% include include/footer%>